RewriteEngine On

RewriteCond %{REQUEST_METHOD} ^GET$
RewriteRule ^advcol$ controllers/advcol.php?action=index

RewriteCond %{REQUEST_METHOD} ^POST$
RewriteRule ^advcol$ controllers/advcol.php?action=create

RewriteCond %{REQUEST_METHOD} ^PUT$
RewriteRule ^advcol/([0-9]+)$ controllers/advcol.php?action=update&id=$1

RewriteCond %{REQUEST_METHOD} ^DELETE$
RewriteRule ^advcol/([0-9]+)$ controllers/advcol.php?action=delete&id=$1
